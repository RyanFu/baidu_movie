<div class="alert alert-info">
共为你找到<%= @movies.size %>部电影!
</div>

<div id="movie_list">
  <div >
    <% @movies.each do |movie| %>
      <div class="span2 movie_box">
        <p><%= movie.name %></p>
        <p><%= movie.year %>年</p>
        <p><%= movie.category %></p>
        <ul>
          <% movie.bdhds.each do |bdhd| %>
            <li><%= link_to bdhd.text, play_movie_url(:id => movie.id, :text => bdhd.text) %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  </div>
</div>