<%= form_tag login_path, class: "form-horizontal" do %>
    <div class="control-group">
        <%= label_tag :username, "用户名", class: "control-label" %>
        <div class="controls">
            <%= text_field_tag :username %>
        </div>  
    </div>
    <div class="control-group">  
        <%= label_tag :password, "密码", class: "control-label" %>
        <div class="controls">
            <%= password_field_tag :password %>
        </div>
    </div>
    <div class="control-group">  
        <div class="controls">
            <%= submit_tag "登录", class: "btn btn-success" %>
        </div>
    </div>
<% end %>